{
  "$schema": "http://json.schemastore.org/template",
  "author": "Keith Cully",
  "classifications": [ "Service Fabric", "Performance" ], 
  "name": "Prototype Stateless .NET Core Service Fabric Service",
  "identity": "SF.ClusterEmulator.PrototypeStateless",         
  "groupIdentity":"SF.ClusterEmulator",
  "shortName": "protoCoreSF",
  "tags": {
    "language": "C#",
    "type":"project"
  },
  "sources": [
    {
      "exclude": [
        "**/[Bb]in/**",
        "**/[Oo]bj/**",
        ".template.config/**/*",
        "**/*.filelist",
        "**/*.user",
        "**/Settings.xml"
      ]
    }
  ],
  "sourceName": "Emulation",
  "preferNameDirectory":true,
  "symbols":{
    "port": {
      "type": "parameter",
      "datatype": "int",
      "defaultValue": "1234"
    },
    "aiKey": {
      "type": "parameter",
      "datatype": "string",
      "defaultValue": ""
    },
    "regexPort": {
      "type": "generated",
      "generator": "regex",
      "dataType": "string",
      "replaces": "Port=\"8561\"",
      "parameters": {
        "action": "replace",
        "source": "port",
        "steps": [
          {
            "regex": "^([0-9]+)$",
            "replacement": "Port=\"$1\""
          }
        ]
      }
    },
    "regexAIKey": {
      "type": "generated",
      "generator": "regex",
      "dataType": "string",
      "replaces": "\"instrumentationKey\": \"\"",
      "parameters": {
        "action": "replace",
        "source": "aiKey",
        "steps": [
          {
            "regex": "^(.*)$",
            "replacement": "\"instrumentationKey\": \"$1\""
          }
        ]
      }
    }
  }
}